doctype html
html
	head
		title The Poll Collection
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cabin|Roboto")
		link(rel="stylesheet" href="/css/register.css")
	body
		include ./partials/_navbar
		
		h1#page-lead Register page
		
		hr 
		
		#register-flex-container
			include ./partials/_messages
			
			form(action="/users/register", method="POST")#register-form
				.form-group
					label(for="username") Username *
					input(type="text" name="username" value=username required)
				.form-group
					label(for="email") Email *
					input(type="email" name="email" value=email required)
				.form-group
					label(for="password") Password *
					input(type="password" name="password" value=password required)
				.form-group
					label(for="password2") Re-Enter Password *
					input(type="password" name="password2" value=password2 required)
				
				input(type="submit", value="Register")